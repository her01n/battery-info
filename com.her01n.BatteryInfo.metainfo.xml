<component type="desktop-application">
  <id>com.her01n.BatteryInfo</id>
  <metadata_license>CC0-1.0</metadata_license>
  <name>Battery Info</name>
  <summary>Shows informations about the system battery.</summary>
  <description>
    <p>
      Displays informations about the installed battery.
    </p>
    <ul>
      <li>Vendor and model</li>
      <li>Technology</li>
      <li>Nominal capacity</li>
      <li>Actual capacity</li>
      <li>Capacity ratio</li>
    </ul>
  </description>
  <url type="homepage">https://herko.it/battery-info</url>
  <url type="bugtracker">https://github.com/her01n/battery-info/issues</url>
  <url type="vcs-browser">https://github.com/her01n/battery-info</url>
  <launchable type="desktop-id">com.her01n.BatteryInfo.desktop</launchable>
  <developer_name>Michal Herko</developer_name>
  <translation type="gettext">battery-info</translation>
  <content_rating type="oars-1.1" />
  <project_license>GPL-3.0-or-later</project_license>
  <releases>
    <release version="0.2" date="2024-02-01">
      <description>
        <ul>
          <li>Show multiple batteries if present</li>
          <li>Italian translation</li>
        </ul>
      </description>
    </release>
    <release version="0.1" date="2023-11-27">
      <description>
        <p>Initial release</p>
      </description>
    </release>
  </releases>
  <screenshots>
    <screenshot type="default">
      <image>https://herko.it/battery-info/screenshots/toymaker-light.png</image>
    </screenshot>
    <screenshot>
      <image>https://herko.it/battery-info/screenshots/taran-dark.png</image>
    </screenshot>
  </screenshots>
  <provides>
    <binary>battery-info</binary>
  </provides>
  <supports>
    <control>pointing</control>
    <control>touch</control>
  </supports>
  <recommends>
    <display_length compare="ge">400</display_length>
  </recommends>
</component>

